{
  "name": "kodtrol",
  "productName": "Kodtrol",
  "version": "0.1.0",
  "private": true,
  "description": "Code-based show control software",
  "homepage": "http://kodtrol.com",
  "repository": "https://github.com/H-s-O/Kodtrol",
  "bugs": "https://github.com/H-s-O/Kodtrol/issues",
  "main": "./build/main/kodtrol-main.js",
  "scripts": {
    "postinstall": "patch-package && copy-files-from-to",
    "start": "cross-env-shell KODTROL_DEV=true \"npx electron -r esbuild-register ./src/main/kodtrol-main.js\"",
    "watch:renderer": "npm run clear:build-dir && npm run script:watch-and-build",
    "build:renderer": "npm run script:watch-and-build -- --build",
    "clear:build-dir": "npx rimraf --glob ./build/*",
    "clear:dist-dir": "npx rimraf --glob ./dist/*",
    "build-babel": "babel ./src/main --ignore 'src/main/lib/helpers/*.js' --copy-files --out-dir ./build/main && babel ./src/renderer --out-dir ./build/renderer && babel ./src/common --out-dir ./build/common",
    "dist": "npx electron-builder build",
    "build-and-dist": "npm run clear-build && npm run build-babel && npm run build-parcel && npm run build-icons && npm run dist",
    "rebuild-addons-for-electron": "npx electron-rebuild",
    "generate-screenshots": "npm start -- --screenshots ../../dev/screenshots.js --project ./dev/demo_project.json",
    "generate-helpers-doc": "jsdoc -c jsdoc-conf.json > ./dev/helpers_doc.json",
    "test": "mocha --recursive -r esbuild-register",
    "script:watch-and-build": "node ./scripts/watch-and-build.mjs",
    "script:print-electron-versions": "npx electron -r ./scripts/print-electron-versions.js",
    "script:generate-icons": "node ./scripts/generate-icons.mjs"
  },
  "author": "HsO <hugostonge@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": "^18.17.1",
    "npm": "^9.8.1"
  },
  "copyFiles": [
    {
      "from": "patches_bin/liblaserdocklib.so",
      "to": "node_modules/@laser-dac/laserdock/sdk/liblaserdocklib.so"
    }
  ],
  "dependencies": {
    "@blueprintjs/core": "^3.36.0",
    "@blueprintjs/datetime": "^3.20.0",
    "@blueprintjs/select": "^3.15.0",
    "@laser-dac/core": "^0.4.1",
    "@laser-dac/draw": "^0.6.0",
    "@laser-dac/ether-dream": "^0.4.1",
    "@laser-dac/laserdock": "^0.4.0",
    "@reecelucas/react-use-hotkeys": "^1.2.0",
    "ace-builds": "^1.4.11",
    "audio-waveform-svg-path": "^1.0.2",
    "chokidar": "^2.1.2",
    "color": "^3.0.0",
    "css-electron-reset": "^1.0.0",
    "dmx": "^0.2.4",
    "domready": "^1.0.8",
    "eases": "^1.0.8",
    "electron-log": "^4.2.0",
    "electron-redux": "^1.5.2",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.6",
    "howler": "^2.2.0",
    "jzz": "^1.0.6",
    "lodash": "^4.17.19",
    "midi": "^1.0.0",
    "object-hash": "^2.0.3",
    "osc": "^2.4.1",
    "react": "^16.14.0",
    "react-ace": "^8.1.0",
    "react-color": "^2.18.1",
    "react-dom": "^16.14.0",
    "react-redux": "^7.2.0",
    "redux": "^3.7.2",
    "redux-observers": "^2.1.1",
    "simplex-noise": "^2.4.0",
    "styled-components": "^4.4.1",
    "uniqid": "^4.1.1",
    "yargs": "^13.3.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.4.1",
    "chai": "^4.3.10",
    "copy-files-from-to": "^3.9.1",
    "cross-env": "^7.0.3",
    "electron": "^8.5.5",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.19.8",
    "esbuild-plugin-copy-file": "^0.0.2",
    "esbuild-register": "^3.5.0",
    "esbuild-style-plugin": "^1.6.3",
    "icon-gen": "^4.0.0",
    "jsdoc": "^4.0.2",
    "less": "^4.2.0",
    "mocha": "^10.2.0",
    "patch-package": "^8.0.0",
    "redux-devtools-extension": "^2.13.5",
    "rimraf": "^5.0.5"
  }
}
