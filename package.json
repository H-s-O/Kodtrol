{
  "name": "kodtrol",
  "productName": "Kodtrol",
  "version": "0.1.0",
  "private": true,
  "description": "Code-based show control software",
  "homepage": "http://kodtrol.com",
  "repository": "https://github.com/H-s-O/Kodtrol",
  "bugs": "https://github.com/H-s-O/Kodtrol/issues",
  "main": "./build/main/kodtrol-main.js",
  "scripts": {
    "dev": "cross-env KODTROL_DEV=true npm run clear-build && parcel watch --target splash --target splash-preload --target editor --target editor-preload --no-hmr",
    "start": "cross-env KODTROL_DEV=true electron -r ts-node/register src_ts/main/kodtrol-main.ts",
    "clear-build": "npx rimraf ./build/* .parcel-cache",
    "build": " parcel build --target splash --target splash-preload --target editor --target editor-preload --no-hmr",
    "build-icons": "npx electron-icon-builder --input=./src/icons/app.png --output=./build",
    "dist": "npx electron-builder build",
    "build-and-dist": "npm run clear-build && npm run build && npm run build-icons && npm run dist",
    "rebuild": "npx electron-rebuild",
    "generate-screenshots": "npm start -- --screenshots ../../dev/screenshots.js --project ./dev/demo_project.json",
    "generate-helpers-doc": "jsdoc -c jsdoc-conf.json > ./dev/helpers_doc.json",
    "test": "mocha --recursive -r @babel/register",
    "postinstall": "patch-package && copy-files-from-to"
  },
  "author": "HsO <hugostonge@gmail.com>",
  "license": "ISC",
  "targets": {
    "main": false,
    "splash": {
      "source": "./src_ts/renderer/splash/splash.html",
      "distDir": "./build",
      "publicUrl": "./../",
      "context": "browser"
    },
    "splash-preload": {
      "source": "./src_ts/renderer/splash/splash-preload.ts",
      "distDir": "./build",
      "context": "electron-renderer"
    },
    "editor": {
      "source": "./src_ts/renderer/editor/editor.html",
      "distDir": "./build",
      "publicUrl": "./../",
      "context": "browser"
    },
    "editor-preload": {
      "source": "./src_ts/renderer/editor/editor-preload.ts",
      "distDir": "./build",
      "context": "electron-renderer"
    }
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "./node_modules/ace-builds/src-noconflict/",
        "staticOutDir": "/ui/",
        "excludeGlob": "**/!(worker-javascript.js)"
      }
    ]
  },
  "copyFiles": [
    {
      "from": "patches_bin/liblaserdocklib.so",
      "to": "node_modules/@laser-dac/laserdock/sdk/liblaserdocklib.so"
    }
  ],
  "dependencies": {
    "@blueprintjs/core": "^4.20.1",
    "@blueprintjs/datetime": "^4.4.36",
    "@blueprintjs/select": "^4.9.22",
    "@laser-dac/core": "^0.4.1",
    "@laser-dac/draw": "^0.6.0",
    "@laser-dac/ether-dream": "^0.4.1",
    "@laser-dac/laserdock": "^0.4.0",
    "@reecelucas/react-use-hotkeys": "^1.2.0",
    "ace-builds": "^1.4.11",
    "assert": "^2.0.0",
    "audio-waveform-svg-path": "^1.0.2",
    "chokidar": "^2.1.2",
    "color": "^3.0.0",
    "css-electron-reset": "^1.0.0",
    "dmx": "^0.2.4",
    "domready": "^1.0.8",
    "eases": "^1.0.8",
    "electron-log": "^4.2.0",
    "electron-window-state": "^5.0.3",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.6",
    "howler": "^2.2.0",
    "jzz": "^1.0.6",
    "lodash": "^4.17.19",
    "midi": "^1.0.0",
    "object-hash": "^2.0.3",
    "osc": "^2.4.1",
    "react": "^16.14.0",
    "react-ace": "^8.1.0",
    "react-color": "^2.18.1",
    "react-dom": "^16.14.0",
    "react-redux": "^7.2.9",
    "redux": "^3.7.2",
    "redux-observers": "^2.1.1",
    "simplex-noise": "^2.4.0",
    "styled-components": "^4.4.1",
    "uniqid": "^4.1.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@parcel/transformer-less": "^2.9.1",
    "@types/domready": "^1.0.0",
    "@types/howler": "^2.2.7",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/styled-components": "^5.1.26",
    "@types/uniqid": "^5.3.2",
    "chai": "^4.2.0",
    "constants-browserify": "^1.0.0",
    "copy-files-from-to": "^3.2.0",
    "cross-env": "^7.0.2",
    "electron": "^24.3.1",
    "electron-builder": "^22.6.1",
    "electron-icon-builder": "^1.0.2",
    "electron-rebuild": "^1.11.0",
    "events": "^3.3.0",
    "jsdoc": "^3.6.4",
    "less": "^3.11.1",
    "mocha": "^7.2.0",
    "node-abi": "^2.30.1",
    "os-browserify": "^0.3.0",
    "parcel": "^2.9.1",
    "parcel-plugin-static-files-copy": "^2.4.3",
    "patch-package": "^6.2.2",
    "path-browserify": "^1.0.1",
    "redux-devtools-extension": "^2.13.5",
    "rimraf": "^3.0.2",
    "stream-browserify": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "util": "^0.12.5"
  }
}
